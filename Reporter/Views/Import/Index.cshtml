
@model Reporter.Models.Excel

@{
    ViewData["Title"] = "Import";

}

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<div class="container">
    <h2 class="text-center mt-4 mb-4">Import Excel To Database</h2>
    <div class="card">
        <div class="card-header"><b>Select Excel File</b></div>
        <div class="card-body">
            <form asp-controller="Import" asp-action="Upload" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">

                    <div id="drop">Drop a file here</div>
                    <label asp-for="ExcelFile">Upload Excel File</label>
                    <input asp-for="ExcelFile" id="file" />
                    <button type="submit" class="btn btn-success">Import</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="left">
    <div id="grid"></div>
    <div id="footnote">
    </div>
</div>

